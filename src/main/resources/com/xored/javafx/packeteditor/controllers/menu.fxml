<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.xored.javafx.packeteditor.controllers.MenuController">
   <MenuBar fx:id="applicationMenu">
      <menus>
         <Menu mnemonicParsing="false" text="File">
            <items>
               <MenuItem mnemonicParsing="false" text="New Document" onAction="#handleNewDocument"/>
               <MenuItem mnemonicParsing="false" text="Close" onAction="#handleCloseAction"/>
            </items>
         </Menu>
         <Menu mnemonicParsing="false" text="Action">
            <items>
               <MenuItem mnemonicParsing="false" text="Add Protocol" onAction="#handleAddProtocolAction"/>
               <MenuItem mnemonicParsing="false" text="Remove Protocol" onAction="#handleRemoveProtocolAction"/>
               <MenuItem mnemonicParsing="false" text="Build Packet" onAction="#handleBuildPacketAction"/>
            </items>
         </Menu>
      </menus>
   </MenuBar>
</VBox>

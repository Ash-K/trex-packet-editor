<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="400.0"
          prefWidth="339.0"
          xmlns="http://javafx.com/javafx/8"
          fx:id="payloadEditorGrid">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0"/>
    </columnConstraints>
    <children>
        <HBox prefWidth="200.0" spacing="2.0">
            <children>
                <TextArea prefHeight="220.0" minHeight="220.0" prefWidth="200.0" minWidth="200.0"
                          fx:id="payloadText"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="2.0">
            <children>
                <TextField/>
                <Button mnemonicParsing="false" text="Select file"
                        fx:id="payloadFile"/>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </HBox>
        <VBox prefWidth="100.0" GridPane.rowIndex="2" spacing="2.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefWidth="339.0" spacing="2.0">
                    <children>
                        <Label text="Payload size: "/>
                        <TextField/>
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </padding>
                </HBox>
                <TextArea minHeight="220.0" prefHeight="220.0" prefWidth="200.0"/>
            </children>
        </VBox>
        <VBox prefWidth="100.0" GridPane.rowIndex="3" spacing="2.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="2.0">
                    <children>
                        <Label text="Payload size: "/>
                        <TextField/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="2.0">
                    <children>
                        <TextField/>
                        <Button mnemonicParsing="false" text="Select file"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER_LEFT" prefWidth="200.0" GridPane.rowIndex="4" spacing="2.0">
            <children>
                <Label text="Payload size: "/>
                <TextField/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefWidth="200.0" GridPane.rowIndex="5" spacing="2.0">
            <children>
                <Label text="Payload size: "/>
                <TextField/>
            </children>
        </HBox>
    </children>
</GridPane>
